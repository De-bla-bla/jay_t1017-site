---
// src/components/SocialLinks.astro
const { items = [] } = Astro.props;
---
<div class="flex flex-wrap gap-4">
  {items.map((l) => (
    <a class="flex items-center gap-3 px-4 py-3 rounded-lg bg-gray-900 border border-gray-800 hover:scale-105 transition" href={l.url} target="_blank" rel="noopener noreferrer">
      {l.icon ? <img src={l.icon} alt={l.platform} class="w-6 h-6 object-contain" /> : (
        <span class="w-6 h-6 flex items-center justify-center bg-yellow-400 text-black rounded">â˜…</span>
      )}
      <span class="font-semibold">{l.platform}</span>
    </a>
  ))}
</div>
